sys = require 'sys'

class Nor.Logger
  
  constructor: ->
    
  debug: (message) ->
    @log 'DEBUG', message
    
  info: (message) ->
    @log 'INFO', message
    
  warn: (message) ->
    @log 'WARN', message
    
  error: (message, ex = null) ->
    if ex
      console.log sys.inspect(ex)
      message += ex.stack
    @log 'ERROR', message
    
  fatal: (message) ->
    @log 'FATAL', message
    
  log: (severity, message) ->
    console.log "[#{severity}] #{new Date()}: #{message}"