class Nor.Routes
  
  constructor: ->
    @routes = 
      'get': []
      'post': []
      'put': []
      'delete': []
    
  match: (url, options = {}) ->
    options['method'] ||= 'get'
    @routes[options['method']].push new Nor.Route(url, options['method'], options)
    
  resources: (name, options = {}) ->
    @match("/#{name}/:id", to: "#{name}#show")
    @match("/#{name}/new", to: "#{name}#new")
    @match("/#{name}/:id", to: "#{name}#edit")
    @match("/#{name}/:id", to: "#{name}#update", method: "put")
    @match("/#{name}/:id", to: "#{name}#destroy", method: "delete")
    @match("/#{name}", to: "#{name}#index")
    @match("/#{name}", to: "#{name}#create", method: "post")